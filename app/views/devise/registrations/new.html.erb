<div class='login'>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

  <fieldset class="login-field">

  <legend>新規登録</legend>

    <%= f.label :email, "Eメール" %>

    <%= f.email_field :email, autofocus: true, class: "form-registration", placeholder: "Eメール" %>



    <%= f.label :password, "パスワード" %>

    <%= f.password_field :password, autocomplete: "off", class: "form-registration", placeholder: "パスワード（６文字以上）" %>


    <%= f.label :password, "パスワード（確認）" %>

    <%= f.password_field :password_confirmation, autocomplete: 'off', class: "form-registration", placeholder: "パスワード（確認）"  %>


  </fieldset>

  <%= f.submit class: 'login-submit', value: '新規登録' %>
<% end %>
<%= render 'devise/shared/links' %>
</div>





<section class="workplace-list">
<div class="container">
  <% if @configuration_list %>
  <table>
    <caption>配置日付一覧</caption>
    <thead>
      <tr>
        <th>日付</th>
        <% if current_user.admin_flg == 1 %>
        <th></th>
        <th></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @configuration_list.each do |configuration| %>
        <tr>
          <td><%= link_to configuration.configuration_date, "/configuration_dates/#{configuration.id}", method: :get %></td>
          <% if current_user.admin_flg == 1 %>
          <td><%= link_to '編集', "/configuration_dates/#{configuration.id}/edit", method: :get %></td>
          <td><%= link_to '削除', "/configuration_dates/#{configuration.id}", method: :delete %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
<caption>配置が登録されていません。</caption>
  <% end %>

  </div>
</section>